<Page x:Class="MEnglish.PickFromFour"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:MEnglish"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Image x:Name="BgImg"
               Stretch="UniformToFill"
               Opacity="0.1"
               Source="{x:Bind Words.All[0].Image}" />
        <StackPanel x:Name="MainStack"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Orientation="Vertical"
                    Width="400"
                    Margin="0 80">
            <TextBlock x:Name="SomeEnWord"
                       FontSize="36"
                       FontWeight="Bold"
                       FontFamily="Bahnschrift"
                       Text="{x:Bind Words.All[0].RussianForms[0]}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="20"
                       TextWrapping="Wrap" />
            <Button x:Name="PickBt1"
                    FontFamily="Bahnschrift"
                    Content="{x:Bind Words.All[0].EnglishForms[0]}"
                    Margin="4"
                    CornerRadius="20"
                    MinWidth="120"
                    Padding="20"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    Style="{ThemeResource ButtonRevealStyle}" />
            <Button x:Name="PickBt2"
                    FontFamily="Bahnschrift"
                    Content="{x:Bind Words.All[1].EnglishForms[0]}"
                    Margin="4"
                    CornerRadius="20"
                    MinWidth="120"
                    Padding="20"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    Style="{ThemeResource ButtonRevealStyle}" />
            <Button x:Name="PickBt3"
                    FontFamily="Bahnschrift"
                    Content="{x:Bind Words.All[2].EnglishForms[0]}"
                    Margin="4"
                    CornerRadius="20"
                    MinWidth="120"
                    Padding="20"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    Style="{ThemeResource ButtonRevealStyle}" />
            <Button x:Name="PickBt4"
                    FontFamily="Bahnschrift"
                    Content="{x:Bind Words.All[3].EnglishForms[0]}"
                    Margin="4"
                    CornerRadius="20"
                    MinWidth="120"
                    Padding="20"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    Style="{ThemeResource ButtonRevealStyle}" />
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0 40"
                        Spacing="8">
                <Border CornerRadius="90"
                        BorderThickness="8"
                        Width="100"
                        Height="100">
                    <Border.BorderBrush>
                        <LinearGradientBrush>
                            <GradientStop Color="Yellow"
                                          Offset="0" />
                            <GradientStop Color="Red"
                                          Offset="1" />
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center">

                        <TextBlock Text="Ошибка"
                                   FontFamily="Bahnschrift" />
                        <TextBlock Name="FalseBar"
                                   Text="0"
                                   FontFamily="Bahnschrift"
                                   HorizontalAlignment="Center"
                                   FontSize="36" />
                    </StackPanel>
                </Border>

                <AppBarSeparator VerticalAlignment="Center" />

                <Border CornerRadius="90"
                        BorderThickness="8"
                        Width="100"
                        Height="100">
                    <Border.BorderBrush>
                        <LinearGradientBrush>
                            <GradientStop Color="DeepSkyBlue"
                                          Offset="0" />
                            <GradientStop Color="Violet"
                                          Offset="1" />
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <TextBlock Text="Всего"
                                   FontFamily="Bahnschrift" />
                        <TextBlock Name="MaxOfBar"
                                   Text="0"
                                   FontFamily="Bahnschrift"
                                   HorizontalAlignment="Center"
                                   FontSize="36" />
                    </StackPanel>
                </Border>

                <AppBarSeparator VerticalAlignment="Center" />

                <Border CornerRadius="90"
                        BorderThickness="8"
                        Width="100"
                        Height="100">
                    <Border.BorderBrush>
                        <LinearGradientBrush>
                            <GradientStop Color="GreenYellow"
                                          Offset="0" />
                            <GradientStop Color="SeaGreen"
                                          Offset="1" />
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <TextBlock Text="Успех"
                                   FontFamily="Bahnschrift" />
                        <TextBlock Name="TrueBar"
                                   Text="0"
                                   FontFamily="Bahnschrift"
                                   HorizontalAlignment="Center"
                                   FontSize="36" />
                    </StackPanel>

                </Border>

            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
