<Page x:Class="MEnglish.PickFromFour"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:MEnglish"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controls="using:Microsoft.UI.Xaml.Controls"
      xmlns:media="using:Microsoft.UI.Xaml.Media"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      controls:BackdropMaterial.ApplyToRootOrPageBackground="True"
      Loaded="Page_Loaded">
    <Grid>
        <Border CornerRadius="360"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Image Source="{x:Bind Words.RandomWordFromFourRandomWords.Image}"
                   Opacity=".5"
                   Stretch="UniformToFill"
                   Width="680"
                   Height="680" />
        </Border>
        <Border>
            <Border.Background>
                <media:AcrylicBrush TintColor="Transparent"
                                    TintLuminosityOpacity="0" />
            </Border.Background>
        </Border>
        <Border CornerRadius="360"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Image Source="{x:Bind Words.RandomWordFromFourRandomWords.Image}"
                   Opacity=".5"
                   Stretch="UniformToFill"
                   Width="600"
                   Height="600" />
        </Border>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Vertical"
                    Width="400">
            <TextBlock FontSize="36"
                       FontWeight="Bold"
                       FontFamily="Bahnschrift"
                       Text="{x:Bind Words.RandomWordFromFourRandomWords.RussianForms[0]}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="20"
                       TextWrapping="Wrap" />
            <Button x:Name="answerButton1"
                    FontFamily="Bahnschrift"
                    Content="{x:Bind Words.FourRandomWords[0].EnglishForms[0]}"
                    Margin="4"
                    CornerRadius="20"
                    MinWidth="120"
                    Padding="20"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    Style="{ThemeResource ButtonRevealStyle}"
                    Click="AnswerButton1_Click" />
            <Button FontFamily="Bahnschrift"
                    Content="{x:Bind Words.FourRandomWords[1].EnglishForms[0]}"
                    Margin="4"
                    CornerRadius="20"
                    MinWidth="120"
                    Padding="20"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    Style="{ThemeResource ButtonRevealStyle}" />
            <Button FontFamily="Bahnschrift"
                    Content="{x:Bind Words.FourRandomWords[2].EnglishForms[0]}"
                    Margin="4"
                    CornerRadius="20"
                    MinWidth="120"
                    Padding="20"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    Style="{ThemeResource ButtonRevealStyle}" />
            <Button FontFamily="Bahnschrift"
                    Content="{x:Bind Words.FourRandomWords[3].EnglishForms[0]}"
                    Margin="4"
                    CornerRadius="20"
                    MinWidth="120"
                    Padding="20"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    Style="{ThemeResource ButtonRevealStyle}" />
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0 40"
                        Spacing="8">
                <Border CornerRadius="90"
                        BorderThickness="8"
                        Width="100"
                        Height="100">
                    <Border.BorderBrush>
                        <LinearGradientBrush>
                            <GradientStop Color="Yellow"
                                          Offset="0" />
                            <GradientStop Color="Red"
                                          Offset="1" />
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <TextBlock Text="Ошибка"
                                   FontFamily="Bahnschrift" />
                        <TextBlock Name="FalseBar"
                                   Text="0"
                                   FontFamily="Bahnschrift"
                                   HorizontalAlignment="Center"
                                   FontSize="36" />
                    </StackPanel>
                </Border>
                <AppBarSeparator VerticalAlignment="Center" />
                <Border CornerRadius="90"
                        BorderThickness="8"
                        Width="100"
                        Height="100">
                    <Border.BorderBrush>
                        <LinearGradientBrush>
                            <GradientStop Color="DeepSkyBlue"
                                          Offset="0" />
                            <GradientStop Color="Violet"
                                          Offset="1" />
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <TextBlock Text="Всего"
                                   FontFamily="Bahnschrift" />
                        <TextBlock Name="MaxOfBar"
                                   Text="0"
                                   FontFamily="Bahnschrift"
                                   HorizontalAlignment="Center"
                                   FontSize="36" />
                    </StackPanel>
                </Border>
                <AppBarSeparator VerticalAlignment="Center" />
                <Border CornerRadius="90"
                        BorderThickness="8"
                        Width="100"
                        Height="100">
                    <Border.BorderBrush>
                        <LinearGradientBrush>
                            <GradientStop Color="GreenYellow"
                                          Offset="0" />
                            <GradientStop Color="SeaGreen"
                                          Offset="1" />
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <TextBlock Text="Успех"
                                   FontFamily="Bahnschrift" />
                        <TextBlock Name="TrueBar"
                                   Text="0"
                                   FontFamily="Bahnschrift"
                                   HorizontalAlignment="Center"
                                   FontSize="36" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
